@model companyOrganisationC.Models.UserSkill

@{
    ViewBag.Title = "AchievedSkill";
}

<h2>AchievedSkill</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>UserSkill</h4>
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="form-group">
            @Html.LabelFor(model => model.Stage, new {@class = "control-label col-md-2"})
            <div class="col-md-2">
                @Html.DropDownListFor(model => model.Stage, (SelectList) ViewBag.SkillStage, new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.Stage, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ExpYears, new {@class = "control-label col-md-2"})
            <div class="col-md-2">
                @Html.EditorFor(model => model.ExpYears, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.ExpYears, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}